<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.eventDetail.EventPurchasesFragment">

    <TextView
        android:id="@+id/fragment_purchases_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/purchases_fragment"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_purchases_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_purchases_label"
        app:layout_constraintVertical_bias="0.0"
        tools:listitem="@layout/item_purchase"
        tools:itemCount="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>